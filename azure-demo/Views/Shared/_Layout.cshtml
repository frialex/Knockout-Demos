<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="@Url.Content("/Content/font-awesome.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("/Content/Menu.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("/Content/Home.css")" />


    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="@Url.Content("/Scripts/knockout-3.1.0.debug.js")"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>*@
                @Ajax.ActionLink("LOGO", "Index", "Home", null,
                                    new AjaxOptions { OnSuccess = "AppCoreInstance.PageLoad" },
                                    new { @class = "navbar-brand" })
            </div>
    </div>


    <div id="TopNavContainer">
        <div data-bind="template: { name: 'Menu' }"></div>
    </div>

    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app-main")
    @RenderSection("scripts", required: false)

    @Html.Partial("_MenuTemplate")
    <script type="text/javascript" src="@Url.Content("/Scripts/jquery.dlmenu.js")"></script>
</body>
</html>
